<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_club_project_tree" model="ir.ui.view">
        <field name="name">club.project.tree</field>
        <field name="model">school.club.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="club_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="view_club_project_form" model="ir.ui.view">
        <field name="name">club.project.form</field>
        <field name="model">school.club.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="club_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <field name="task_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="assigned_to_ids" widget="many2many_tags"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_club_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">school.club.project</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>