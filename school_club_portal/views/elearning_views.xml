<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_elearning_content_tree" model="ir.ui.view">
        <field name="name">elearning.content.tree</field>
        <field name="model">school.elearning.content</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="club_id"/>
                <field name="content_type"/>
            </tree>
        </field>
    </record>

    <record id="view_elearning_content_form" model="ir.ui.view">
        <field name="name">elearning.content.form</field>
        <field name="model">school.elearning.content</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="club_id"/>
                        <field name="content_type"/>
                        <field name="url"/>
                        <field name="quiz_id"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_elearning_content" model="ir.actions.act_window">
        <field name="name">E-Learning Content</field>
        <field name="res_model">school.elearning.content</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>