<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_club_tree" model="ir.ui.view">
        <field name="name">school.club.tree</field>
        <field name="model">school.club</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>

    <record id="view_school_club_form" model="ir.ui.view">
        <field name="name">school.club.form</field>
        <field name="model">school.club</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="responsible_id"/>
                        <field name="description"/>
                    </group>
                    <group string="Members">
                        <field name="member_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Projects">
                            <field name="project_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="E-Learning Content">
                            <field name="content_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="content_type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_club" model="ir.actions.act_window">
        <field name="name">Clubs</field>
        <field name="res_model">school.club</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>