<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_quiz_tree" model="ir.ui.view">
        <field name="name">school.quiz.tree</field>
        <field name="model">school.quiz</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="club_id"/>
                <field name="student_id"/>
                <field name="is_passed"/>
            </tree>
        </field>
    </record>

    <record id="view_school_quiz_form" model="ir.ui.view">
        <field name="name">school.quiz.form</field>
        <field name="model">school.quiz</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="club_id"/>
                        <field name="student_id"/>
                        <field name="question"/>
                        <field name="option_a"/>
                        <field name="option_b"/>
                        <field name="option_c"/>
                        <field name="option_d"/>
                        <field name="correct_answer"/>
                        <field name="is_passed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_quiz" model="ir.actions.act_window">
        <field name="name">Quizzes</field>
        <field name="res_model">school.quiz</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
