<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_badge_tree" model="ir.ui.view">
        <field name="name">school.badge.tree</field>
        <field name="model">school.badge</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="student_id"/>
                <field name="club_id"/>
            </tree>
        </field>
    </record>

    <record id="view_school_badge_form" model="ir.ui.view">
        <field name="name">school.badge.form</field>
        <field name="model">school.badge</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_id"/>
                        <field name="club_id"/>
                        <field name="description"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_badge" model="ir.actions.act_window">
        <field name="name">Badges</field>
        <field name="res_model">school.badge</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>